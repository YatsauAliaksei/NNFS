<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="ERROR">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <!--<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t][%line] %-5level %c{1.} - %msg%n"/>-->
            <PatternLayout pattern="[%t] %ex{full}- %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="org.ml4bull" level="DEBUG"/>
        <Root level="error">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>